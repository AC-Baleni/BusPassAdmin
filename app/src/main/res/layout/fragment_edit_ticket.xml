<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTicket">

    <TextView
        android:id="@+id/textView2Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Bus Ticket"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.043"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.151" />

    <Button
        android:id="@+id/submitBtnEdit"
        android:layout_width="171dp"
        android:layout_height="63dp"
        android:background="@drawable/rounded_button"
        android:text="Submit"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.944" />

    <ImageButton
        android:id="@+id/backBtnAddTicketEdit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_button"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView2Edit"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <ProgressBar
        android:id="@+id/progressBarABTEdit"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="342dp"
        android:layout_height="416dp"
        android:background="@drawable/rounded_box"
        app:layout_constraintBottom_toTopOf="@+id/submitBtnEdit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2Edit"
        app:layout_constraintVertical_bias="0.13999999">

        <LinearLayout
            android:layout_width="317dp"
            android:layout_height="397dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="vertical"
            android:splitMotionEvents="false">

            <TextView
                android:id="@+id/busNumberEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_back"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Bus Number"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/startingLocationEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_back"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="From"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/destinationEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_back"
                android:paddingStart="20dp"
                android:paddingTop="10sp"
                android:paddingBottom="10dp"
                android:text="Destination"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pricePerKmEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/card_back"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Price per Km"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/DepartureTimeEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_back"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="Departure time"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/licensePlateETEdit"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_textbox"
                android:ems="10"
                android:hint="Bus Number"
                android:inputType="text"
                android:paddingStart="20dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/fromETEdit"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_textbox"
                android:ems="10"
                android:enabled="true"
                android:focusable="false"
                android:hint="From"
                android:inputType="text"
                android:paddingStart="20dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/destinationETEdit"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_textbox"
                android:ems="10"
                android:enabled="true"
                android:focusable="false"
                android:hint="Destination"
                android:inputType="text"
                android:paddingStart="20dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/priceETEdit"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_textbox"
                android:ems="10"
                android:hint="Trip Price"
                android:inputType="numberDecimal"
                android:paddingStart="20dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/depTimeETEdit"
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_textbox"
                android:ems="10"
                android:focusable="false"
                android:hint="Departure Time"
                android:inputType="datetime|time"
                android:paddingStart="20dp"
                android:visibility="gone" />

        </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>